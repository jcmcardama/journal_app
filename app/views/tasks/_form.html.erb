<%= form_with model: [@category, @task] do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @task.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>
  
  <div>
    <%= form.label :deadline %><br>
    <%= form.datetime_local_field :deadline %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>