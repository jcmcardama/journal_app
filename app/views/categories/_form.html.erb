<div class="container d-flex flex-wrap h-100 align-content-center justify-content-center">
  <div class="notice alert-danger w-50 text-center">
    <div><%= @category.errors.full_messages_for(:name)[0] %></div>
  </div>

  <div class="container h-75 d-flex flex-wrap align-content-center justify-content-center">
    <%= form_with model: @category do |f| %>

      <div class="form-outline mb-4">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="actions mx-4 d-flex justify-content-around">
        <%= f.submit class:"btn btn-primary btn-block mx-4" %>
        <%= link_to "Cancel", categories_path, class:"btn btn-primary btn-block mx-4" %>
      </div>
    <% end %>
  </div>
</div>